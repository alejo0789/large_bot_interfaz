{
  "name": "chatwoot-n8n-whatsapp",
  "version": "1.0.0",
  "description": "Interfaz Chatwoot conectada con n8n para gesti√≥n de conversaciones WhatsApp",
  "author": "Tu Nombre <tu@email.com>",
  "license": "MIT",
  "homepage": ".",
  "private": true,
  "keywords": [
    "chatwoot",
    "n8n",
    "whatsapp",
    "chat",
    "webhook",
    "railway",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/chatwoot-n8n-whatsapp.git"
  },
  "dependencies": {
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "socket.io-client": "^4.8.1",
    "web-vitals": "^3.3.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "railway:build": "npm run build",
    "railway:start": "serve -s build -l 3000",
    "dev": "npm start",
    "production": "npm run build && npm run railway:start",
    "lint": "eslint src/",
    "analyze": "npm run build && npx bundle-analyzer build/static/js/*.js"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ie <= 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": "off",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "railwayConfig": {
    "build": {
      "command": "npm run build"
    },
    "deploy": {
      "startCommand": "npx serve -s build -l $PORT"
    }
  }
}
